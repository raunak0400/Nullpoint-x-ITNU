# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
FLASK_ENV=development

# MongoDB Database Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=airquality_mongo
MONGO_USER=
MONGO_PASSWORD=
MONGO_URI=

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# NASA Earthdata Authentication
NASA_USERNAME=your-earthdata-username
NASA_PASSWORD=your-earthdata-password

# Email Notification Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@airquality.com
FROM_NAME=Air Quality Alert System

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# AWS Configuration (for SNS, S3, etc.)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Push Notification Configuration
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.yourapp.airquality

# API Keys for external services (optional for testing)
TEMPO_API_KEY=your-tempo-api-key
WEATHER_API_KEY=your-weather-api-key
GROUND_STATION_API_KEY=your-ground-station-api-key

# Application settings
CORS_ORIGINS=*
FORECAST_DAYS=7
UPDATE_INTERVAL_HOURS=6
AQI_ALERT_THRESHOLD=150

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=True

# Server Configuration
HOST=0.0.0.0
PORT=5000
ENABLE_SCHEDULER=True
