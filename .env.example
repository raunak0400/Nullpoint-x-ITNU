# NULL POINT - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/air_quality
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ================================
# NASA API CREDENTIALS
# ================================

# NASA Earthdata Login Credentials
# Sign up at: https://urs.earthdata.nasa.gov/
NASA_USERNAME=your_nasa_username
NASA_PASSWORD=your_nasa_password

# NASA API Key (if required)
NASA_API_KEY=your_nasa_api_key

# TEMPO Satellite Data Access
TEMPO_API_ENDPOINT=https://tempo.si.edu/api/v1
TEMPO_API_KEY=your_tempo_api_key

# ================================
# EXTERNAL API KEYS
# ================================

# OpenAQ API Key
# Get from: https://openaq.org/
OPENAQ_API_KEY=your_openaq_api_key

# Weather API Key (OpenWeatherMap, NOAA, etc.)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_PROVIDER=openweathermap

# AirNow API Key
# Get from: https://www.airnow.gov/
AIRNOW_API_KEY=your_airnow_api_key

# ================================
# APPLICATION SETTINGS
# ================================

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_super_secret_key_here_change_in_production
DEBUG=true

# CORS Settings
CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ================================
# CACHING CONFIGURATION
# ================================

# Redis Cache Settings
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=null_point_
REDIS_TTL=600

# Data Fusion Cache
FUSION_CACHE_TTL=600
FORECAST_CACHE_TTL=1800
SATELLITE_CACHE_TTL=900

# ================================
# LOGGING & MONITORING
# ================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# ================================
# MACHINE LEARNING SETTINGS
# ================================

# Model Configuration
DEFAULT_FORECAST_DAYS=7
MAX_FORECAST_DAYS=14
MIN_HISTORICAL_DAYS=10

# Model Selection Thresholds
PROPHET_MIN_DAYS=60
RANDOM_FOREST_MIN_DAYS=30
LINEAR_REGRESSION_MIN_DAYS=10

# Feature Engineering
ENABLE_LAG_FEATURES=true
ENABLE_ROLLING_FEATURES=true
ENABLE_WEATHER_FEATURES=true

# ================================
# NOTIFICATION SETTINGS
# ================================

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Optional)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# ================================
# SECURITY SETTINGS
# ================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# API Security
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=false
ADMIN_API_KEY=your_admin_api_key

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ================================
# FRONTEND CONFIGURATION
# ================================

# Next.js Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MAPS=true
NEXT_PUBLIC_ENABLE_FORECASTING=true

# Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Map Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_google_maps_key

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Development Database (Optional)
DEV_MONGODB_URI=mongodb://localhost:27017/air_quality_dev
DEV_REDIS_URL=redis://localhost:6379/1

# Testing
TEST_MONGODB_URI=mongodb://localhost:27017/air_quality_test
TEST_REDIS_URL=redis://localhost:6379/2

# Mock Data
ENABLE_MOCK_DATA=false
MOCK_DATA_PROBABILITY=0.1

# ================================
# PRODUCTION SETTINGS
# ================================

# Production Database
PROD_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/air_quality
PROD_REDIS_URL=rediss://username:password@redis-cluster.com:6380

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
STATIC_FILES_URL=https://static.yourdomain.com

# Load Balancer
LOAD_BALANCER_URL=https://api.yourdomain.com
HEALTH_CHECK_PATH=/health

# ================================
# CLOUD PROVIDER SETTINGS
# ================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=null-point-data

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Configuration
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key

# ================================
# BACKUP & RECOVERY
# ================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Data Archival
ARCHIVE_OLD_DATA=true
ARCHIVE_AFTER_DAYS=90
ARCHIVE_STORAGE_PATH=/archives
